#version 330

layout (location = 0) in vec3 position;
layout (location = 1) in vec3 normal;
layout (location = 2) in vec2 texCoord;

//in vec3 pos;
//in vec3 normal;

//auto interpolation between pixels
out vec3 normal0;
out vec3 lightDir0;
out vec2 texCoord0;

//can be set by CPU and read by GPU
uniform mat4 transform;
uniform vec3 lightDir;

void main()
{
    lightDir0 = lightDir;
    texCoord0 = vec2(texCoord.x,1-texCoord.y);
    //cancel translation with ,0
    //it may have been scaled, so we need to normalize it
    normal0 = normalize((transform * vec4(normal,0)).xyz);
    gl_Position = transform * vec4(position,1.);
}

